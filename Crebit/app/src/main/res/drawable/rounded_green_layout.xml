<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/bean_red" />
            <gradient android:angle="-90" android:endColor="@color/bean_red" android:startColor="@color/bean_red" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/bean_red" />
            <solid android:color="@color/bean_red" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/green_onion" />
            <gradient android:angle="-90" android:endColor="@color/green_onion" android:startColor="@color/green_apple" />
        </shape>
    </item>
</selector>