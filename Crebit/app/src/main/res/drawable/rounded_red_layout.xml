<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/bean_red" />
            <gradient android:angle="-90" android:startColor="@color/bean_red" android:endColor="@color/bean_red"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/bean_red" />
            <solid android:color="@color/bean_red"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/raspberry_glace" />
            <gradient android:angle="-90" android:startColor="@color/raspberry_rose" android:endColor="@color/bean_red" />
        </shape>
    </item>
</selector>