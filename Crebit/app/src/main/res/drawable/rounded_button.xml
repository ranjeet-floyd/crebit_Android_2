<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/dark_blue" />
            <gradient android:angle="-90" android:startColor="@color/dark_blue" android:endColor="@color/dark_blue" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/butterfly_blue" />
            <solid android:color="@color/butterfly_blue" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="1dip" android:topLeftRadius="0dp" android:topRightRadius="1dp" android:bottomLeftRadius="1dp" android:bottomRightRadius="0dp" />
            <stroke android:width="1dip" android:color="@color/butterfly_blue" />
            <gradient android:angle="-90" android:startColor="@color/butterfly_blue" android:endColor="@color/butterfly_blue" />
        </shape>
    </item>
</selector>