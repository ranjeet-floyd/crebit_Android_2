<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bitblue.crebit.servicespage.fragments.BankAccPay">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/crebitbackground">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/crebitbackground">

                <LinearLayout
                    android:id="@+id/ll_bankacc"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_bap_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_bankacc">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ll_bap"
                            android:layout_width="match_parent"
                            android:layout_height="350dp"
                            android:layout_below="@+id/ll_bankacc"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/rounded_layout"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_bap_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="@string/name"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/et_bap_name"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginBottom="20dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/rounded_edit_text"
                                android:hint="  Enter Name "
                                android:imeOptions="actionNext"
                                android:singleLine="true" />

                            <TextView
                                android:id="@+id/tv_bap_accNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Account Number"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/et_bap_accNum"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginBottom="20dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/rounded_edit_text"
                                android:hint="  Enter Account Number "
                                android:imeOptions="actionNext"
                                android:inputType="phone"
                                android:singleLine="true" />

                            <TextView
                                android:id="@+id/tv_bap_ifsc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="IFSC Code"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/et_bap_ifsc"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginBottom="20dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/rounded_edit_text"
                                android:hint=" Enter IFSC code "
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:singleLine="true" />

                            <TextView
                                android:id="@+id/tv_bap_mobNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="@string/mobNum"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/et_bap_mobNum"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginBottom="20dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/rounded_edit_text"
                                android:hint=" Enter Mobile Number "
                                android:imeOptions="actionNext"
                                android:inputType="phone"
                                android:singleLine="true" />

                            <TextView
                                android:id="@+id/tv_bap_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Amount"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/et_bap_amount"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginBottom="20dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/rounded_edit_text"
                                android:hint=" Enter Amount "
                                android:imeOptions="actionDone"
                                android:inputType="phone"
                                android:singleLine="true" />
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_bap_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_bap_form"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/b_bap_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/rounded_button"
                        android:text="Submit"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_bs_end"
                    android:layout_below="@id/ll_bap_submit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="vertical" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/black"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bitBlue"
            android:textColor="@color/white" />
    </LinearLayout>
</FrameLayout>
